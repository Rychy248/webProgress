
<%- include("layout/header") %>

<link rel="stylesheet" type="text/css" href="/css/styles.css">

<%- include("layout/nav") %>

    <div class="box" id="heading">
        <h1><%= modelName %> List</h1>
    </div>

    
    <div class="box">
        <% todoList.forEach((element,index) => { %>
            <div class="item">
                <input type="checkbox" id="<%= element._id %>" onclick="deleteItem(this,'<%= modelName%>')">
                <h3 index="<%= index + 1 %>"> <%= index + 1 %> <%= element.item %></h3>
            </div>
        <%}); %>

    </div>

    <div class="box">
        <form action="/custom/<%= modelName %>" class="item" method="post" name="form-customList" onsubmit="return customItem('<%= modelName %>')">
            <input type="text" name="todo" placeholder="add another todo">
            <button>+</button>
        </form>
    </div>
    
    <script src="/js/customItemAdd.js" type="text/javascript"></script>

<%- include("layout/footer") %>