
<%- include("partials/header.ejs") %>


<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" name="title" placeholder="Your title">
    </div>
    <div class="mb-3">
        <label for="body" class="form-label">Post</label>
        <textarea class="form-control" name="body" rows="3" placeholder="Type your post here"></textarea>
    </div>
    <button class="btn btn-primary mb-3" type="submit">Publish</button>
</form>



