<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h3 class="display-3"><%= user %></h3>
    <h1 class="display-3">You've Discovered My Secret!</h1>
    <%  if (secrets.length !== 0) { %>
      <% secrets.forEach(secret => {%>
        <!-- [<i> <%= secret.dateAdded %> </i>] -->
        <p class="secret-text"> <%= secret.secret %></p>
      <%});%>
    <% } else { %>
      <p class="secret-text">There's any secret!</p>
    <%  } %>
    
    

    <hr>
    
    <a class="btn btn-light btn-lg" href="/auth/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/secrets/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
